---
import '../styles/global.css'
import Navbar from '../components/Navbar'
import Hero from '../components/Hero'
import Services from '../components/Services'
import Process from '../components/Process'
import WhyUs from '../components/WhyUs'
import Stats from '../components/Stats'
import Testimonials from '../components/Testimonials'
import FAQ from '../components/FAQ'
import ContactForm from '../components/ContactForm'
import Footer from '../components/Footer'
import FloatingWhatsApp from '../components/FloatingWhatsApp'

const SITE = 'https://futureandfortune.in'
const TITLE = 'Future & Fortune â€” HR & Recruitment Excellence'
const DESC = 'Hire smarter. Build compliant HR. Elevate culture. Expert recruitment, HR management, and corporate gifting services designed for growth and retention.'
const OG_IMG = `${SITE}/og-image.jpg`
const EMAIL = 'hr@futureandfortune.in'

const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": `${SITE}/#organization`,
      "name": "Future & Fortune",
      "url": SITE,
      "logo": `${SITE}/favicon.svg`,
      "email": EMAIL,
      "description": DESC,
      "sameAs": [
        "https://www.linkedin.com/company/future-fortune-solutions/"
      ],
      "contactPoint": [{
        "@type": "ContactPoint",
        "contactType": "sales",
        "email": EMAIL,
        "telephone": "+91 75061 25291",
        "areaServed": "Worldwide",
        "availableLanguage": ["English"]
      }],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "HR and Talent Services",
        "itemListElement": [
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Recruitment", "serviceType": "Talent Acquisition"} },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "HR Management", "serviceType": "HR Operations"} },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "HR Consultation", "serviceType": "HR Strategy"} },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "HR Advisory", "serviceType": "Compliance & Policy"} },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Corporate Gifting", "serviceType": "Employee Experience"} }
        ]
      }
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        { "@type": "Question", "name": "What industries do you serve?", "acceptedAnswer": { "@type": "Answer", "text": "We work with startups, SMBs, and enterprises across tech, finance, healthcare, and more." } },
        { "@type": "Question", "name": "How quickly can you fill open positions?", "acceptedAnswer": { "@type": "Answer", "text": "Our average time-to-hire is 15 days, significantly faster than industry standards." } },
        { "@type": "Question", "name": "Do you handle HR compliance globally?", "acceptedAnswer": { "@type": "Answer", "text": "Yes, we advise on compliant policies, documentation, and audits tailored to your region." } }
      ]
    }
  ]
}
---

<html lang="en" class="dark scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{TITLE}</title>
    <meta name="description" content={DESC} />
    <link rel="canonical" href={SITE} />
    <meta name="theme-color" content="#0ea5e9" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="icon" href="/favicon.svg" />

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={TITLE} />
    <meta property="og:description" content={DESC} />
    <meta property="og:url" content={SITE} />
    <meta property="og:image" content={OG_IMG} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={TITLE} />
    <meta name="twitter:description" content={DESC} />
    <meta name="twitter:image" content={OG_IMG} />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  </head>

  <body class="bg-dark-950 text-white antialiased">
    <!-- Skip to content link for accessibility -->
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary-600 text-white px-4 py-2 rounded-lg z-50">
      Skip to content
    </a>

    <Navbar client:load />
    
    <main id="main">
      <Hero client:load />
      <Services client:visible />
      <Stats client:visible />
      <Process client:visible />
      <WhyUs client:visible />
      <Testimonials client:visible />
      <FAQ client:visible />
      <ContactForm client:visible />
    </main>
    
    <Footer client:visible />
    <FloatingWhatsApp client:load />
  </body>
</html>