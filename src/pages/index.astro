---
import '../styles/global.css'
import Navbar from '../components/Navbar'
import Hero from '../components/Hero'
import Services from '../components/Services'
import Process from '../components/Process'
import WhyUs from '../components/WhyUs'
import Stats from '../components/Stats'
import Testimonials from '../components/Testimonials'
import FAQ from '../components/FAQ'
import ContactForm from '../components/ContactForm'
import Footer from '../components/Footer'
import FloatingWhatsApp from '../components/FloatingWhatsApp'
import FeatureCarousel from '../components/FeatureCarousel'

const SITE = 'https://futureandfortune.in'
const TITLE = 'Future & Fortune | HR Advisory, Recruitment & HR Consultancy in Pune & Mumbai'
const DESC = 'Hire smarter. Build compliant HR. Elevate culture. HR advisory, recruitment and HR consultancy in Pune & Mumbai â€” designed for growth, compliance and retention.'
const OG_IMG = `${SITE}/og-image.jpg`
const EMAIL = 'hr@futureandfortune.in'
const KEYWORDS = 'HR advisory Pune, HR advisory Mumbai, HR consultancy Pune, HR consultancy Mumbai, Recruitment agency Pune, Recruitment agency Mumbai, HR outsourcing Pune, HR outsourcing Mumbai, Corporate gifting Pune, Corporate gifting Mumbai, Pune HR services, Mumbai HR services, talent acquisition Pune, talent acquisition Mumbai, Future & Fortune HR'

const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": `${SITE}/#organization`,
      "name": "Future & Fortune",
      "url": SITE,
      "logo": `${SITE}/favicon.svg`,
      "email": EMAIL,
      "description": DESC,
      "keywords": KEYWORDS,
      "sameAs": [
        "https://www.linkedin.com/company/future-fortune-solutions/"
      ],
      "areaServed": [
        { "@type": "City", "name": "Pune" },
        { "@type": "City", "name": "Mumbai" },
        "India",
        "Worldwide"
      ],
      "serviceArea": [
        { "@type": "City", "name": "Pune" },
        { "@type": "City", "name": "Mumbai" }
      ],
      "contactPoint": [{
        "@type": "ContactPoint",
        "contactType": "sales",
        "email": EMAIL,
        "telephone": "+91 75061 25291",
        "areaServed": ["Pune", "Mumbai", "India", "Worldwide"],
        "availableLanguage": ["English"]
      }],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "HR and Talent Services",
        "itemListElement": [
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Recruitment", "serviceType": "Talent Acquisition", "areaServed": ["Pune", "Mumbai"] } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "HR Management", "serviceType": "HR Operations", "areaServed": ["Pune", "Mumbai"] } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "HR Consultation", "serviceType": "HR Strategy", "areaServed": ["Pune", "Mumbai"] } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "HR Advisory", "serviceType": "Compliance & Policy", "areaServed": ["Pune", "Mumbai"] } },
          { "@type": "Offer", "itemOffered": { "@type": "Service", "name": "Corporate Gifting", "serviceType": "Employee Experience", "areaServed": ["Pune", "Mumbai"] } }
        ]
      }
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        { "@type": "Question", "name": "What industries do you serve?", "acceptedAnswer": { "@type": "Answer", "text": "We work with startups, SMBs, and enterprises across tech, finance, healthcare, and more." } },
        { "@type": "Question", "name": "How quickly can you fill open positions?", "acceptedAnswer": { "@type": "Answer", "text": "Our average time-to-hire is 15 days, significantly faster than industry standards." } },
        { "@type": "Question", "name": "Do you handle HR compliance globally?", "acceptedAnswer": { "@type": "Answer", "text": "Yes, we advise on compliant policies, documentation, and audits tailored to your region." } }
      ]
    },
    {
      "@type": "WebPage",
      "@id": `${SITE}/#webpage`,
      "url": SITE,
      "name": TITLE,
      "inLanguage": "en",
      "keywords": KEYWORDS,
      "description": DESC
    }
  ]
}
---

<html lang="en" class="dark scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{TITLE}</title>
    <meta name="description" content={DESC} />
    <meta name="keywords" content={KEYWORDS} />
    <link rel="canonical" href={SITE} />
    <meta name="theme-color" content="#0ea5e9" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="icon" href="/favicon.svg" />

    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={TITLE} />
    <meta property="og:description" content={DESC} />
    <meta property="og:url" content={SITE} />
    <meta property="og:image" content={OG_IMG} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={TITLE} />
    <meta name="twitter:description" content={DESC} />
    <meta name="twitter:image" content={OG_IMG} />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  </head>

  <body class="bg-dark-950 text-white antialiased">
    <!-- Skip to content link for accessibility -->
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary-600 text-white px-4 py-2 rounded-lg z-50">
      Skip to content
    </a>

    <Navbar isHomeProp={true} client:load />
    
    <main id="main">
      <Hero client:visible />
      <FeatureCarousel client:visible />
      <Services client:visible />
      <Stats client:visible />
      <Process client:visible />
      <WhyUs client:visible />
      <Testimonials client:visible />
      <FAQ client:visible />
      <ContactForm client:visible />
    </main>
    
    <Footer isHomeProp={true} client:visible />
    <FloatingWhatsApp client:idle />
  </body>
</html>